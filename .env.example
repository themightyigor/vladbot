# Telegram bot token from @BotFather
BOT_TOKEN=your_bot_token_here

# OpenAI API key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Display name of the person to mimic (as shown in the exported chat)
PERSON_NAME=Vlad

# Facts about the person (used in persona)
PERSONA_BIO=

# Character traits (added to system prompt)
PERSONA_TRAITS=

# Path to Telegram HTML export (file, folder, or comma-separated paths)
EXPORT_HTML_PATH=./data/messages.html

# Persona build: few-shot pairs (default 40) and style samples (default 50)
PERSONA_FEW_SHOT_PAIRS=40
PERSONA_STYLE_SAMPLES=50

# Few-shot pairs per request: without RAG (default 25), with RAG (default 8)
OPENAI_FEW_SHOT_IN_PROMPT=25
OPENAI_FEW_SHOT_WHEN_RAG=8

# RAG (after npm run build-rag)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
RAG_TOP_K=12

# Fine-tuning: base model for training; set FINETUNED after job succeeds
OPENAI_FINE_TUNE_BASE_MODEL=gpt-4o-mini-2024-07-18
OPENAI_FINETUNED_MODEL=
FINETUNE_MAX_EXAMPLES=5000
# When using fine-tuned model: max reply length (default 600), temperature (default 0.9)
OPENAI_FINETUNED_MAX_TOKENS=600
OPENAI_FINETUNED_TEMPERATURE=0.9
